{% extends 'baseMain.html.twig' %}

{% block title %}Lecons{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('lesson') }}
{% endblock %}

{% block content %}

    {{ include('partiels/_messageFlashes.html.twig') }}

    <div class="d-flex w-100 flex-wrap container-buttons-lessons">
        <a class="btn-category" href="{{ path('app_lesson_category', {'slug': 'food-safty'}) }}">
            <img class="img-menu" src="{{ asset('images/buttons/foodSafty.png') }}">
            <div>Sécurité Alimentaire - ({{ listFoodSafety|length }})</div>
        </a>
        <a class="btn-category" href="{{ path('app_lesson_category', {'slug': 'management'}) }}">
            <img class="img-menu" src="{{ asset('images/buttons/management.png') }}">
            <div>Gestion de quart  - ({{ listManagement|length }})</div>
        </a>
        <a class="btn-category" href="{{ path('app_lesson_category', {'slug': 'counter'}) }}">
            <img class="img-menu" src="{{ asset('images/buttons/counter.png') }}">
            <div>Comptoir  - ({{ listCounter|length }})</div>
        </a>
        <a class="btn-category" href="{{ path('app_lesson_category', {'slug': 'kitchen'}) }}">
            <img class="img-menu" src="{{ asset('images/buttons/kitchen.jpg') }}">
            <div>Cuisine  - ({{ listKitchen|length }})</div>
        </a>
        <a class="btn-category" href="{{ path('app_lesson_category', {'slug': 'administration'}) }}">
            <img class="img-menu" src="{{ asset('images/buttons/administation.jpg') }}">
            <div>Administration  - ({{ listAdministration|length }})</div>
        </a>
        <a class="btn-category" href="{{ path('app_lesson_category', {'slug': 'PEP'}) }}">
            <img class="img-menu" src="{{ asset('images/buttons/PEP.png') }}">
            <div>PEP  - ({{ listPEP|length }})</div>
        </a>
        <a class="btn-category" href="{{ path('app_lesson_category', {'slug': 'various'}) }}">
            <img class="img-menu" src="{{ asset('images/buttons/various.png') }}">
            <div>Divers  - ({{ listVarious|length }})</div>
        </a>

        {% if is_granted('ROLE_TEACHER') %}
            <a class="btn-category new-lesson" href="{{ path('teacher_new_lesson') }}">
                <img class="img-menu" src="{{ asset('images/buttons/add_notes.svg') }}">
                <div>Créer une le&ccedil;on</div>
            </a>
        {% endif %}
    </div>

{% endblock %}
