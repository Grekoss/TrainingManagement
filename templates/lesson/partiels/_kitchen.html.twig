<div class="tab-pane active" id="kitchen">
    <div class="list-group">

        {% for kitchen in listKitchen %}
            <a href="{{ asset( kitchen.file ) }}" class="list-group-item list-group-item-action">
                <h5 class="mb-1">{{ kitchen.title }}</h5>
                <p class="mb-1">{{ kitchen.description|truncate(225, true) }}</p>
                <div class="d-flex w-100 justify-content-between">
                    {% if kitchen.file %}
                        <div class="{{ kitchen.extension }} link-icon"></div>
                    {% endif %}
                    <small class="my-auto">{{ kitchen.updatedAt|date('d/m/Y') }}</small>
                </div>
{#                FIXME: A retirer#}
                {{ dump(kitchen.category) }}
            </a>
        {% else %}
            <div>Aucun enregistrement actuellement</div>
        {% endfor %}

    </div>
</div>
