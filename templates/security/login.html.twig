{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block body %}
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form method="post" class="login100-form validate-form">
{#                    <div class="alert alert-danger">TEST</div>#}
                    <span class="login100-form-title">
                        Connexion au compte
                    </span>

                    <div class="container-input">
                        <div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate="Type email">
                            <input id="inputEmail" class="input100" type="email" name="email" placeholder="Email" value="{{ last_username }}" autofocus>
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate="Type password">
                            <input class="input100" type="password" name="password" placeholder="Mot de passe" id="inputPassword">
                            <span class="focus-input100"></span>
                        </div>

                        <div class="w-100 text-center my-2">
                            <input type="checkbox" id="remember_me" name="_remember_me" checked>
                            <label for="remember_me">Rester connecté</label>
                        </div>
                    </div>


                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">



                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Se connecter
                        </button>
                    </div>

                    <div class="container-login100-forgot">
                        <a href="#" class="txt2">
{#                            FIXME: Faire le lien#}
                            Mot de passe
                        </a>
                        <span class="txt1">
                            oublié
                        </span>
                    </div>

                    <div class="w-100 text-center m-15">
                        <span class="txt3">
                            Inscription seulement sur invitation
                        </span>
                    </div>
                </form>

                <div class="login100-more"></div>
            </div>
        </div>
    </div>






