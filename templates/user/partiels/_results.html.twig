<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Nom</th>
        <th scope="col">Thème</th>
        <th scope="col">Résultat</th>
        <th scope="col">Date</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>

    {% for result in results %}
    <tr>
        <th scope="row">{{ result.id }}</th>
        <th>{{ result.quiz.title}}</th>
        <th>
            {% for tag in result.quiz.tags %}
                {{ include('partiels/_showTagBadge.html.twig')}}
            {% endfor %}
        </th>
        <th>
            {{ include('partiels/_barProgressForResult.html.twig') }}
        </th>
        <th>{{ result.dateAt|date('d/m/Y') }}</th>
        <th>
            <a href="{{ path('app_correction', {'id': result.id })}}" title="Voir le résultat" class="btn btn-outline-primary"><i class="fas fa-eye"></i></a>
            {% if result.student == app.user %}
                <a href="{{ path('app_start_quiz', {'id': result.quiz.id})}}" title="Recommencer le questionnaire" class="btn btn-outline-warning"><i class="fas fa-undo"></i></a>
            {% endif %}
        </th>
    </tr>

    {% else %}

    <tr>
        <th colspan="6">Pas de test effectué !</th>
    </tr>
    {% endfor %}

    </tbody>
</table>
