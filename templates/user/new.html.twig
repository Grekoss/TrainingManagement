{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ encore_entry_link_tags('profile') }}
{% endblock %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="limiter">
        <div class="container-body">
            <div class="wrap-body">

                <div class="content">
                    <div class="jumbotron">
                        <h1 class="display-4">Inscription</h1>
                        <p class="lead">Vous avez reçu une invation pour votre inscription. Merci de remplir les champs necessaires afin de valider votre inscription et continuer votre formation.</p>
                    </div>
                    {% include('partiels/_messageFlashes.html.twig') %}

                    {{ form_start(form) }}

                    <div class="mb-3">
                        <div class="d-flex errors-box w-100">
                            {{ form_errors(form.firstName) }}{{ form_errors(form.lastName) }}
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Prénom & Nom</span>
                            </div>
                            {{ form_widget(form.firstName, {attr: {title: 'Enter your first name'}}) }}
                            {{ form_widget(form.lastName, {attr: {title: 'Enter your last name'}}) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex errors-box w-100">
                            {{ form_errors(form.email) }}{{ form_errors(form.phoneNumber) }}
                        </div>
                        <div class="w-100 d-flex">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-email"><i class="fas fa-at"></i></span>
                                </div>
                                {{ form_widget(form.email, {attr: {title: 'Enter your Email'}}) }}
                            </div>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-phone"><i class="fas fa-mobile-alt"></i></span>
                                </div>
                                {{ form_widget(form.phoneNumber, {attr: {title: 'Enter your phone number'}}) }}
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Mot de passe</span>
                            </div>
                            {{ form_widget(form.password.first, {attr: {title: 'Enter your password'}}) }}
                            {{ form_widget(form.password.second, {attr: {title: 'Confirm your password'}}) }}
                            <img id="js-errors-identical-image" class="hidden" src="{{ asset('build/images/valide.1c55e519.png') }}" alt="validate">
                        </div>

                        <div id="js-errors-password" class="invalid-feedback d-flex">
                            <div id="js-errors-counter-box" class="hidden">
                                <span class="form-error-icon badge-warning badge text-uppercase">Attention</span>
                                <span id="js-errors-counter-message" class="form-error-message">Votre mot de passe doit contenir au moins 6 caractères</span>
                            </div>
                            <div id="js-errors-identical-box" class="hidden">
                                <span class="form-error-icon badge-warning badge text-uppercase">Attention</span>
                                <span id="js-errors-identical-message" class="form-error-message">Votre mot de passe et la confirmation ne sont pas identiques</span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <input value="Valider vottre inscription" class="btn btn-outline-success w-75" type="submit">
                    </div>

                    {{ form_end(form) }}
                </div>

                <div class="content-more"></div>

            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('profile') }}
{% endblock %}
