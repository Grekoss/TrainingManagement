<div class="card">
    <div class="card-header">
        <div class="badge badge-success my-auto">{{ quiz.questions|length }} questions</div>
        <div class="text-right">
            {% for tag in quiz.tags %}
                <div class="badge" style="background-color: {{ tag.backgroundColor }}; color: {{ tag.textColor }};">{{ tag.name }}</div>
            {% endfor %}
        </div>
    </div>
    <div class="card-body">
        <h5 class="card-title text-center">{{ quiz.title }}</h5>
        <p class="card-text">{{ quiz.description }}</p>
        <div class="text-center">
            {#                    FIXME: Mettre un systeme pour afficher le dernier passage de l'user avec date et résultat#}
            <div class="text-muted">Dernier passage : {{ '-15 days'|date('d/m/Y') }}</div>
            <div>Résultat : 80 %</div>
        </div>
    </div>
    <div class="card-footer">
        {#                FIXME: mettre le lien#}
        <a class="btn btn-outline-info w-100" href="{{ path('app_question_show', {'id': quiz.id}) }}">Commencer le questionnaire</a>
    </div>
</div>
